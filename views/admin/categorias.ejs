<%- include('../template/head') %>
<%- include('../template/nav-admin') %>
<div class="container">
    <div class=""><a href="/admin/categorias/nova">Nova categoria</a></div>
    <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                <% Categorias.forEach( Categoria => { %>
                <tr>
                    <th scope="row"><%= Categoria.id %></th>
                    <td><%= Categoria.categoria %></td>
                    <td>
                        <a href="/admin/categorias/editar/<%- Categoria.id %>"><i class="far fa-edit"></i></a>
                        <a href="/admin/categorias/excluir/<%- Categoria.id %>"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
    </table>
</div>
<%- include('../template/footer') %>